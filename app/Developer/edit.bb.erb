<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @developer.object %>
    <h1>Edit <%= @developer.developer_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @developer.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @developer.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Developer: </td>
              <td class="itemValue"><input type="text" name="developer[developer_id]" value="<%= @developer.developer_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">First name: </td>
              <td class="itemValue"><input type="text" name="developer[first_name]" value="<%= @developer.first_name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Last name: </td>
              <td class="itemValue"><input type="text" name="developer[last_name]" value="<%= @developer.last_name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Email: </td>
              <td class="itemValue"><input type="text" name="developer[email]" value="<%= @developer.email %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">User name: </td>
              <td class="itemValue"><input type="text" name="developer[user_name]" value="<%= @developer.user_name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Status: </td>
              <td class="itemValue"><input type="text" name="developer[status]" value="<%= @developer.status %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Locale: </td>
              <td class="itemValue"><input type="text" name="developer[locale]" value="<%= @developer.locale %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Organization: </td>
              <td class="itemValue"><input type="text" name="developer[organization]" value="<%= @developer.organization %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Address: </td>
              <td class="itemValue"><input type="text" name="developer[address]" value="<%= @developer.address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Support contact: </td>
              <td class="itemValue"><input type="text" name="developer[support_contact]" value="<%= @developer.support_contact %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Support phone: </td>
              <td class="itemValue"><input type="text" name="developer[support_phone]" value="<%= @developer.support_phone %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
